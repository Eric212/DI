<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start|top"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="#005912"
        android:text="1"
        android:textSize="35sp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:text="2"
        android:textSize="35sp"
        android:backgroundTint="#008F1D"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="end"
        android:text="3"
        android:textSize="35sp"
        android:backgroundTint="#15D43B"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center|start"
        android:text="4"
        android:textSize="35sp"
        android:backgroundTint="#23008C"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:text="5"
        android:textSize="35sp"
        android:backgroundTint="#3100C4"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center|end"
        android:text="6"
        android:textSize="35sp"
        android:backgroundTint="#3C00F0"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="bottom"
        android:text="7"
        android:textSize="35sp"
        android:backgroundTint="#B00707"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="bottom|center"
        android:text="8"
        android:textSize="35sp"
        android:backgroundTint="#DB0909"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="bottom|end"
        android:text="9"
        android:textSize="35sp"
        android:backgroundTint="#FA0A0A"
        app:cornerRadius="0dp"/>
</FrameLayout>